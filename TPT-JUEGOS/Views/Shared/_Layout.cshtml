@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TPT_JUEGOS</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jersey+10&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (ViewData["OcultarNavbar"] == null)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark navbar-personalizada mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/Logos/Logo TPTGames.png" alt="TPT Games" style="height: 100px; width: auto;" />
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">

                            @if (Context.Session.GetString("UsuarioId") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-boton" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link nav-boton" asp-controller="Juego" asp-action="MisFavoritos">Mis Favoritos</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link nav-boton" asp-controller="Usuario" asp-action="MiPerfil">Mi Cuenta</a>
                                </li>

                                @if (Context.Session.GetInt32("tipo") == 1)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link nav-boton" asp-controller="Juego" asp-action="Index">Admin</a>
                                    </li>
                                }

                                <li class="nav-item ms-3">
                                    <a class="nav-link nav-boton nav-boton-salir" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-boton" asp-controller="Home" asp-action="IndexBienvenida">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-boton" asp-controller="Home" asp-action="InicioSesion">Ingresar</a>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>